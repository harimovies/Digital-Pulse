<div class="author">
  <h1 class="author__heading"><%= articleData.articleType %></h1>
  <p class="author__body">Stay informed, stay ahead</p>
</div>

<img src="/img/<%= articleData.filename %>" alt="" class="hero-image" />

<section class="articles">
  <h2 class="articles__heading">Latest News</h2>

  <ul class="article-ul">
    <% data.forEach(post => { %>

    <li>
      <a href="/post/<%= post._id %>">
        <span><%= post.title %></span>
        <span class="article-list__date"
          ><%=post.createdAt.toDateString() %></span
        >
      </a>
    </li>

    <% }) %>
  </ul>

  <% if (nextPage!==null) { %>
  <a href="/posts/<%= articleName %>?page=<%= nextPage %>" class="pagination"
    >&lt; View Older News</a
  >
  <% } %>
</section>
