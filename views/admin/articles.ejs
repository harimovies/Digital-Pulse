<div class="admin-title">
  <h2>Categories</h2>
  <a href="/add-article" class="button">+ Add New Category</a>
</div>
<ul class="admin-posts">
  <% data.forEach(article => { %>
  <li>
    <a href="/dashboard/<%= article.articleType %>">
      <%= article.articleType %> &nearr;
    </a>
    <div class="admin-post-controls">
      <a href="/edit-article/<%= article._id %>" class="btn">Edit</a>
      <form
        action="/delete-article/<%= article._id %>?_method=DELETE"
        method="POST"
      >
        <input type="submit" value="Delete" class="btn" />
      </form>
    </div>
  </li>
  <% }) %>
</ul>
