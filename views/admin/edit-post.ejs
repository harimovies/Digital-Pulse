<a href="/dashboard">&larr; Back</a>
<div class="admin-title">
  <h2>View / Edit Post</h2>
  <form action="/delete-post/<%= data._id %>?_method=DELETE" method="POST">
    <input type="submit" value="Delete" class="btn-delete btn" />
  </form>
</div>

<form
  action="/edit-post/<%= data._id %>?_method=PUT"
  method="POST"
  enctype="multipart/form-data"
  class="form1"
>
  <label for="articleType"><b>Article Type</b></label>
  <select name="articleType" id="">
    <option value="<%= data.articleType %>"><%= data.articleType %></option>
    <% data2.forEach(article => { %>
    <option value="<%= article.articleType %>">
      <%= article.articleType %>
    </option>
    <% }) %>
  </select>

  <label for="title"><b>Title</b></label>
  <input
    type="text"
    placeholder="Post Title"
    name="title"
    value="<%= data.title %>"
  />

  <label for="synopsis"><b>Synopsis</b></label>
  <textarea
    name="synopsis"
    id=""
    cols="50"
    rows="4"
    placeholder="Synopsis goes here"
  >
<%= data.synopsis %></textarea
  >

  <label for="body"><b>Content</b></label>
  <textarea name="body" id="" cols="50" rows="10"><%= data.body %></textarea>

  <label for="image"><b>Choose a image</b></label>
  <input type="file" name="image" />

  <input type="submit" value="Update" class="btn" name="" id="" />
</form>
